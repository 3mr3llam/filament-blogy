{
    "name": "filament/blogy",
    "description": "A Laravel blog package with SEO features and Filament integration",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Amr Allam",
            "email": "iacoder@live.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0",
        "filament/filament": "^3.0",
        "filament/forms": "^3.0",
        "filament/tables": "^3.0",
        "filament/notifications": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "FilamentBlogy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FilamentBlogy\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FilamentBlogy\\FilamentBlogyServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "keywords": [
        "laravel",
        "filament",
        "blog",
        "seo",
        "cms"
    ]
}
